@page "{id:int}"
@model RazorPagesCar.Pages_Cars.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Car</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Car.Make)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Car.Make)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Car.Model)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Car.Model)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Car.NumberOfDoors)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Car.NumberOfDoors)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Car.Cylinders)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Car.Cylinders)
        </dd>
        @foreach(var x in Model.Car.Reviews)
        {
            <dt class="col-sm-2">@Html.DisplayNameFor(model => x.CustReview)</dt>
            <dd class="col-sm-1">@Html.DisplayFor(model => x.CustReview)</dd>
            <dd class="col-sm-9">@Html.DisplayFor(model => x.CustReviewDesc)</dd>
        }
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Car.ID">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
